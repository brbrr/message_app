<%= form_for :message, routes.root_path do
  div(class: 'form-group') do
    label 'Message Text'
    text_area :text, class: "form-control", rows: "3", placeholder: "Type your message text here"
  end

  div(class: 'form-group') do
    radio_group
  end

  div(class: 'form-group') do
    label 'Number of views/hours'
    number_field :value, name: 'trigger[value]', class: "form-control", value: '1', placeholder: "Number of views/hours"
  end

  # div(class: 'form-group') do
  #   label 'Password:'
  #   password_field :password, class: "form-control"
  #   hidden_field :encrypted_message
  # end

  submit 'Send message', class: 'btn btn-default'
end %>
